}

    .fraseInicio {
      text-align: center;
    }

    .divfraseInicio {
      margin-left: 50px;
    }

    .botaoEntrar {
      width: 15vw;
      /* Defina a largura desejada */
      height: 4vw;
      text-align: center;
      /* Centraliza o texto dentro do botão */
      border-radius: 35%;
      /* Faz o círculo */
      background-color: rgb(255, 155, 30);
      color: #ffffff;
      margin-left: 30%;
      margin-top: 10%;
      font-size: 20px;
    }

    .botaoEntrar:hover {
      background-color: rgb(255, 170, 0);
      color: #ffffff;
    }

    .fotoEntrar {
      width: 15vw;
      /* Defina a largura desejada */
      height: 4vw;
      text-align: center;
      /* Centraliza o texto dentro do botão */
      margin-left: 30%;
      margin-top: 10%;
      font-size: 20px;
    }

    .nav-link {
      position: relative;
      display: inline-block;
      padding: 10px 20px;
      /* Ajuste o padding conforme necessário */
      margin-left: 50px;
      margin-right: 50px;
      color: #ffffff;
    }

    .nav-link::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 7vw;
      /* Largura do círculo */
      height: 4vw;
      /* Altura do círculo */
      background-color: rgb(255, 155, 30);
      /* Cor do círculo */
      border-radius: 35%;
      /* Faz o círculo */
      transform: translate(-50%, -50%);
      /* Centraliza o círculo */
      z-index: -1;
      /* Coloca o círculo atrás do texto */
    }

    .nav-link:hover::before {
      background-color: rgb(255, 170, 0);
      /* Cor do círculo ao passar o mouse (opcional) */
    }

    .nav-link.logged-in::before {
    background-color: transparent; /* Torna transparente quando logado */
}


