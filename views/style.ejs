    }

    .form_estilo {
      /* Estilizar formulário cadastro e login*/
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      width: 300px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #f9f9f9;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .campos_form {
      /* Estizar campos do form cadastro e login */
      width: 100%;
      padding: 10px;
      margin-bottom: 10px;
      border: 1px solid #FF9B1E;
      border-radius: 5px;
      box-sizing: border-box;
    }

    .campo_enviar {
      /* Estizar campo de submit do form cadastro e login */
      width: 100%;
      padding: 10px;
      background-color: #FF9B1E;
      border: none;
      color: #fff;
      transition: background-color 0.3s ease;
    }

    /* Estizar as páginas de futebol, handebol, volei e basquete */
    .titulosEsportes {
